<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/frame">
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardSample"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"

        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/taken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="13dp"
                android:layout_marginTop="10dp" />

            <CheckBox
                android:id="@+id/returned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/taken"
                android:layout_alignBottom="@+id/taken"
                android:layout_toEndOf="@+id/taken" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/returned"
                android:layout_alignBottom="@+id/returned"
                android:layout_alignParentEnd="true"
                android:hint="Dunno what its called :)" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="270dp"
                android:layout_height="200dp"
                android:layout_below="@+id/taken"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/taken"
                app:srcCompat="?attr/colorAccent" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</FrameLayout>